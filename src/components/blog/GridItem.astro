---
import { APP_BLOG } from 'astrowind:config';
import type { Post } from '~/types';
import type { ImageMetadata } from 'astro';

import Image from '~/components/common/Image.astro';

import { findImage } from '~/utils/images';
import { getPermalink } from '~/utils/permalinks';
import symbolBlack from '~/assets/images/logos/symbolBlack.svg';
import symbolWhite from '~/assets/images/logos/symbolWhite.svg';

export interface Props {
  post: Post;
}

const { post } = Astro.props;
const image = await findImage(post.image) as ImageMetadata | undefined;

const link = APP_BLOG?.post?.isEnabled ? getPermalink(post.permalink, 'post') : '';

// Determine if drafts should be shown (same logic as in blog.ts)
const SHOW_DRAFTS = import.meta.env.DEV || 
                    import.meta.env.PUBLIC_SHOW_DRAFTS_IN_PREVIEW === "true";

// Helper function to get display name for content type
function getContentTypeDisplay(contentType?: string): string {
  const contentTypeMap: Record<string, string> = {
    'essay': 'ESSAY',
    'brief': 'BRIEF',
    'elsewhere': 'ELSEWHERE',
    'quote': 'QUOTE',
    'episodes': 'EPISODES',
    // Legacy mappings (for backward compatibility)
    'posts': 'ESSAY',
    'micro': 'BRIEF'
  };
  
  return contentTypeMap[contentType || 'essay'] || 'ESSAY';
}
---

<article
  class="mb-6 transition intersect-once intersect-quarter motion-safe:md:opacity-0 motion-safe:md:intersect:animate-fade"
>
  {SHOW_DRAFTS && post.draft && (
    <div class="mb-2">
      <span class="inline-block px-3 py-1 text-xs font-bold uppercase tracking-wider bg-amber-500 text-white rounded-full">
        Draft
      </span>
    </div>
  )}
  <div class="relative bg-gray-400 dark:bg-slate-700 rounded shadow-lg mb-6 aspect-[44/28]">
    {
      image ? (
        link ? (
          <a href={link}>
            <Image
              src={image}
              class="w-full h-full rounded shadow-lg bg-gray-400 dark:bg-slate-700"
              widths={[400, 900]}
              width={400}
              sizes="(max-width: 900px) 400px, 900px"
              alt={post.title}
              aspectRatio="44:28"
              layout="cover"
              loading="lazy"
              decoding="async"
            />
          </a>
        ) : (
          <Image
            src={image}
            class="w-full h-full rounded shadow-lg bg-gray-400 dark:bg-slate-700"
            widths={[400, 900]}
            width={400}
            sizes="(max-width: 900px) 400px, 900px"
            alt={post.title}
            aspectRatio="44:28"
            layout="cover"
            loading="lazy"
            decoding="async"
          />
        )
      ) : (
        link ? (
          <a href={link} class="block w-full h-full">
            <div class="w-full h-full rounded shadow-lg bg-gray-200 dark:bg-gray-800 flex flex-col items-center justify-center">
              <img src={symbolBlack.src} alt="" class="w-20 h-20 opacity-80 dark:hidden" data-pagefind-ignore="all" />
              <img src={symbolWhite.src} alt="" class="w-20 h-20 opacity-70 hidden dark:block" data-pagefind-ignore="all" />
              <span class="text-xs font-semibold text-gray-700 dark:text-gray-300 mt-2 uppercase tracking-wider">
                {getContentTypeDisplay(post.contentType)}
              </span>
            </div>
          </a>
        ) : (
          <div class="w-full h-full rounded shadow-lg bg-gray-200 dark:bg-gray-800 flex flex-col items-center justify-center">
            <img src={symbolBlack.src} alt="" class="w-20 h-20 opacity-80 dark:hidden" />
            <img src={symbolWhite.src} alt="" class="w-20 h-20 opacity-70 hidden dark:block" />
            <span class="text-xs font-semibold text-gray-700 dark:text-gray-300 mt-2 uppercase tracking-wider">
              {getContentTypeDisplay(post.contentType)}
            </span>
          </div>
        )
      )
    }
  </div>

  <h3 class="text-xl sm:text-2xl font-bold leading-tight mb-2 font-heading dark:text-slate-300">
    {
      link ? (
        <a class="inline-block hover:text-primary dark:hover:text-blue-700 transition ease-in duration-200" href={link}>
          {post.title}
        </a>
      ) : (
        post.title
      )
    }
  </h3>

  <p class="text-muted dark:text-slate-400 text-lg">{post.excerpt || post.description}</p>
</article>
