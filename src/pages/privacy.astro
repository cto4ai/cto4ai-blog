---
import Layout from '~/layouts/PageLayout.astro';
import { Content as PrivacyContent } from '~/privacy-policy.md';

const metadata = {
  title: 'Privacy Policy',
  description: 'CTO4.AI Privacy Policy - How we collect, use, and protect your information',
  robots: {
    index: true,
    follow: true,
  },
};
---

<Layout metadata={metadata}>
  <main class="px-6 sm:px-6 py-12 sm:py-20 mx-auto max-w-4xl">
    <article class="prose prose-lg dark:prose-invert mx-auto">
      <PrivacyContent />
    </article>
  </main>
</Layout>