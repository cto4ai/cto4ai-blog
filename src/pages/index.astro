---
import type { ImageMetadata } from 'astro';
import Layout from '~/layouts/PageLayout.astro';
import NewsletterModal from '~/components/widgets/NewsletterModal.astro';
import Logo from '~/components/Logo.astro';
import Image from '~/components/common/Image.astro';
import { fetchPosts, findFeaturedPost } from '~/utils/blog';
import { getPermalink } from '~/utils/permalinks';
import { getFormattedDateConditionalYear } from '~/utils/utils';
import { findImage } from '~/utils/images';
import symbolLogo from '~/assets/images/logos/symbol.svg';

// Helper function to get display name for content type
function getContentTypeDisplay(post: any): string {
  const contentTypeMap: Record<string, string> = {
    'posts': 'ESSAY',
    'micro': 'NOTE',
    'elsewhere': 'LINK',
    'quote': 'QUOTE'
  };
  
  return contentTypeMap[post.contentType || 'posts'] || 'ESSAY';
}

export const prerender = true;

const posts = await fetchPosts();
const featuredPost = await findFeaturedPost();
// Filter out the featured post from the other posts list
const otherPosts = posts.filter(post => post.id !== featuredPost?.id).slice(0, 6);

// Find images for featured post and other posts
const featuredPostImage = featuredPost ? await findImage(featuredPost.image) as ImageMetadata | undefined : undefined;
const postsWithImages = await Promise.all(
  otherPosts.map(async (post) => ({
    ...post,
    imageMetadata: await findImage(post.image) as ImageMetadata | undefined
  }))
);

const metadata = {
  title: 'CTO4.AI - AI-Focused Insights for Technology Leaders',
  description: 'AI-focused insights and practical guidance for CTOs and technology leaders navigating the AI transformation.',
  ignoreTitleTemplate: true,
};
---

<Layout metadata={metadata}>
  <!-- Newsletter Modal -->
  <NewsletterModal />

  <!-- Main Content -->
  <main class="px-6 sm:px-6 py-8 sm:py-12 mx-auto max-w-6xl">
    
    <!-- Featured Article -->
    {featuredPost && (
      <section class="mb-12 pb-12 border-b border-gray-200 dark:border-gray-800">
        <article class="flex flex-col md:flex-row gap-8">
          {/* Image on left */}
          <div class="md:w-1/2">
            {featuredPostImage ? (
              <a href={getPermalink(featuredPost.permalink)}>
                <Image
                  src={featuredPostImage}
                  alt={featuredPost.title}
                  class="w-full h-full object-cover rounded-lg"
                  widths={[400, 768]}
                  sizes="(max-width: 768px) 100vw, 50vw"
                  loading="eager"
                  decoding="async"
                />
              </a>
            ) : (
              <a href={getPermalink(featuredPost.permalink)} class="w-full h-full min-h-[200px] rounded-lg bg-gray-200 dark:bg-gray-800 flex flex-col items-center justify-center">
                <img src={symbolLogo.src} alt="" class="w-24 h-24 opacity-80 dark:opacity-70" style="filter: brightness(0.7)" />
                <span class="text-sm font-semibold text-gray-700 dark:text-gray-300 mt-3 uppercase tracking-wider">
                  {getContentTypeDisplay(featuredPost)}
                </span>
              </a>
            )}
          </div>
          {/* Content on right */}
          <div class="md:w-1/2 flex flex-col justify-center">
            <h1 class="text-3xl sm:text-4xl font-bold text-gray-900 dark:text-white mb-3">
              <a href={getPermalink(featuredPost.permalink)} class="hover:text-blue-600 dark:hover:text-blue-400 transition-colors">
                {featuredPost.title}
              </a>
            </h1>
            {(featuredPost.excerpt || featuredPost.description) && (
              <p class="text-lg text-gray-600 dark:text-gray-300 mb-4 leading-relaxed">
                {featuredPost.excerpt || featuredPost.description}
              </p>
            )}
            <div class="flex items-center text-sm text-gray-500 dark:text-gray-400 uppercase tracking-wide">
              <time datetime={featuredPost.publishDate && getFormattedDateConditionalYear(featuredPost.publishDate)}>
                {featuredPost.publishDate && getFormattedDateConditionalYear(featuredPost.publishDate).toUpperCase().replace(',', '')}
              </time>
              <span class="mx-2">•</span>
              <span>{(featuredPost.author || 'Jack Ivers').toUpperCase()}</span>
              <span class="mx-2">•</span>
              <span>{getContentTypeDisplay(featuredPost)}</span>
            </div>
          </div>
        </article>
      </section>
    )}

    <!-- Two Column Layout -->
    <div class="flex flex-col lg:flex-row gap-12 divide-x-0 lg:divide-x divide-gray-200 dark:divide-gray-800">
      <!-- Left Column: Blog Posts -->
      <section class="lg:w-2/3 lg:pr-12">
        <div class="space-y-8">
          {postsWithImages.map((post, index) => (
            <article class={index < otherPosts.length - 1 ? "pb-8 border-b border-gray-200 dark:border-gray-800" : "pb-8"}>
              <div class="flex gap-4">
                {/* Text content on left - narrower */}
                <div class="flex-1 max-w-md">
                  <h3 class="text-xl font-bold text-gray-900 dark:text-white mb-2">
                    <a href={getPermalink(post.permalink)} class="hover:text-blue-600 dark:hover:text-blue-400 transition-colors">
                      {post.title}
                    </a>
                  </h3>
                  {(post.excerpt || post.description) && (
                    <p class="text-gray-600 dark:text-gray-300 text-sm mb-3 line-clamp-2">
                      {post.excerpt || post.description}
                    </p>
                  )}
                  <div class="flex items-center text-xs text-gray-500 dark:text-gray-400 uppercase tracking-wide">
                    <time datetime={post.publishDate && getFormattedDateConditionalYear(post.publishDate)}>
                      {post.publishDate && getFormattedDateConditionalYear(post.publishDate).toUpperCase().replace(',', '')}
                    </time>
                    <span class="mx-2">•</span>
                    <span>{(post.author || 'Jack Ivers').toUpperCase()}</span>
                    <span class="mx-2">•</span>
                    <span>{getContentTypeDisplay(post)}</span>
                  </div>
                </div>
                {/* Image on right - larger to match oneusefulthing */}
                <div class="flex-shrink-0 w-44 h-28">
                  {post.imageMetadata ? (
                    <a href={getPermalink(post.permalink)}>
                      <Image
                        src={post.imageMetadata}
                        alt={post.title}
                        class="w-full h-full object-cover rounded-lg"
                        widths={[176, 352]}
                        sizes="176px"
                        loading="lazy"
                        decoding="async"
                      />
                    </a>
                  ) : (
                    <a href={getPermalink(post.permalink)} class="w-full h-full rounded-lg bg-gray-200 dark:bg-gray-800 flex flex-col items-center justify-center">
                      <img src={symbolLogo.src} alt="" class="w-16 h-16 opacity-80 dark:opacity-70" style="filter: brightness(0.7)" />
                      <span class="text-xs font-semibold text-gray-700 dark:text-gray-300 mt-2 uppercase tracking-wider">
                        {getContentTypeDisplay(post)}
                      </span>
                    </a>
                  )}
                </div>
              </div>
            </article>
          ))}
        </div>

        {/* See all link at bottom left */}
        <div class="mt-8">
          <a 
            href="/archive" 
            class="text-blue-600 dark:text-blue-400 hover:text-blue-700 dark:hover:text-blue-300 font-medium transition-colors inline-flex items-center"
          >
            See all 
            <svg class="w-4 h-4 ml-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
            </svg>
          </a>
        </div>
      </section>

      <!-- Right Column: Sidebar -->
      <aside class="lg:w-1/3 lg:pl-12">
        {/* Subscribe Section */}
        <div class="bg-white dark:bg-gray-800 rounded-lg p-6 mb-8 lg:-mt-6">
          <div class="mb-4">
            <Logo />
            <p class="text-sm text-gray-600 dark:text-gray-400 mt-2">AI insights for technology leaders</p>
          </div>
          <form class="space-y-3">
            <input 
              type="email" 
              placeholder="Type your email..." 
              class="w-full px-4 py-2 border border-gray-300 dark:border-gray-600 rounded-lg bg-white dark:bg-gray-900 text-gray-900 dark:text-white focus:outline-none focus:border-blue-500"
            />
            <button 
              type="submit" 
              class="w-full px-4 py-2 bg-blue-600 hover:bg-blue-700 text-white font-medium rounded-lg transition-colors"
            >
              Subscribe
            </button>
          </form>
        </div>

        {/* Recommendations Section */}
        <div class="bg-white dark:bg-gray-800 rounded-lg p-6 mb-8">
          <div class="flex items-center justify-between mb-4 pb-3 border-b border-gray-200 dark:border-gray-700">
            <h3 class="font-bold text-gray-900 dark:text-white">Recommendations</h3>
            <a href="#" class="text-xs text-gray-500 dark:text-gray-400 hover:text-gray-700 dark:hover:text-gray-300 uppercase">View All</a>
          </div>
          <div class="space-y-4">
            <a href="#" class="flex items-center hover:bg-gray-50 dark:hover:bg-gray-700 p-2 rounded transition-colors">
              <div class="w-10 h-10 bg-gray-300 dark:bg-gray-600 rounded-full mr-3"></div>
              <div>
                <div class="font-medium text-gray-900 dark:text-white text-sm">AI Research Blog</div>
                <div class="text-xs text-gray-500 dark:text-gray-400">Latest AI papers</div>
              </div>
            </a>
            <a href="#" class="flex items-center hover:bg-gray-50 dark:hover:bg-gray-700 p-2 rounded transition-colors">
              <div class="w-10 h-10 bg-gray-300 dark:bg-gray-600 rounded-full mr-3"></div>
              <div>
                <div class="font-medium text-gray-900 dark:text-white text-sm">Tech Leadership</div>
                <div class="text-xs text-gray-500 dark:text-gray-400">CTO insights</div>
              </div>
            </a>
            <a href="#" class="flex items-center hover:bg-gray-50 dark:hover:bg-gray-700 p-2 rounded transition-colors">
              <div class="w-10 h-10 bg-gray-300 dark:bg-gray-600 rounded-full mr-3"></div>
              <div>
                <div class="font-medium text-gray-900 dark:text-white text-sm">Engineering Excellence</div>
                <div class="text-xs text-gray-500 dark:text-gray-400">Best practices</div>
              </div>
            </a>
          </div>
        </div>

        {/* Resources Section */}
        <div class="bg-white dark:bg-gray-800 rounded-lg p-6">
          <h3 class="font-bold text-gray-900 dark:text-white mb-4 pb-3 border-b border-gray-200 dark:border-gray-700">Resources</h3>
          <div class="space-y-3">
            <a href="#" class="block text-blue-600 dark:text-blue-400 hover:text-blue-700 dark:hover:text-blue-300 text-sm">
              AI Implementation Guide
            </a>
            <a href="#" class="block text-blue-600 dark:text-blue-400 hover:text-blue-700 dark:hover:text-blue-300 text-sm">
              CTO Handbook: AI Strategy
            </a>
            <a href="#" class="block text-blue-600 dark:text-blue-400 hover:text-blue-700 dark:hover:text-blue-300 text-sm">
              Newsletter Archive
            </a>
          </div>
        </div>
      </aside>
    </div>

  </main>
</Layout>

<style>
  .line-clamp-2 {
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
</style>