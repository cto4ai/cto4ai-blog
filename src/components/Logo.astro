---
import { SITE } from 'astrowind:config';
import { Image } from 'astro:assets';
import logoColor from '~/assets/images/logos/noBgColor.svg';
import logoWhite from '~/assets/images/logos/noBgWhite.svg';
---

<div class="flex items-center">
  <!-- Light mode: Use the color/black logo -->
  <Image src={logoColor} alt={SITE?.name || 'cto4.ai'} width={120} height={40} class="h-12 w-auto dark:hidden" />
  <!-- Dark mode: Use the white logo -->
  <Image src={logoWhite} alt={SITE?.name || 'cto4.ai'} width={120} height={40} class="h-12 w-auto hidden dark:block" />
</div>
