---
import '@fontsource-variable/space-grotesk';
import logoSvg from '~/assets/images/logos/noBgColor.svg';

const metadata = {
  title: 'Subscribe',
  description: 'Subscribe to the CTO4.AI newsletter',
  robots: {
    index: true,
    follow: true,
  },
};
---

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>{metadata.title}</title>
  <meta name="description" content={metadata.description}>
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <style>
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }
    
    :root {
      --aw-color-text-muted: #6b7280;
    }
    
    body {
      font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, sans-serif;
      background: #ffffff;
      min-height: 100vh;
      display: flex;
      align-items: center;
      justify-content: center;
      padding: 1rem;
    }
    
    body.dark {
      background: #0f172a;
      --aw-color-text-muted: #9ca3af;
    }
    
    .container {
      width: 100%;
      max-width: 420px;
      background: #ffffff;
      border-radius: 10px;
      padding: 30px;
      box-shadow: 0 1px 3px 0 rgba(0, 0, 0, 0.1), 0 1px 2px 0 rgba(0, 0, 0, 0.06);
    }
    
    body.dark .container {
      background: #1f2937;
    }
    
    .logo-section {
      margin-bottom: 1rem;
    }
    
    .logo-wrapper {
      display: flex;
      align-items: center;
    }
    
    .logo-wrapper img {
      height: 60px;
      width: auto;
      filter: brightness(0.8);
    }
    
    body.dark .logo-wrapper img {
      filter: none;
    }
    
    /* Hide/show based on dark mode */
    .dark\:hidden {
      display: block;
    }
    
    .hidden.dark\:block {
      display: none;
    }
    
    body.dark .dark\:hidden {
      display: none;
    }
    
    body.dark .hidden.dark\:block {
      display: block;
    }
    
    .tagline {
      font-family: 'Space Grotesk Variable', sans-serif;
      color: var(--aw-color-text-muted);
      font-weight: 700;
      font-size: 1.25rem;
      margin-top: 0.5rem;
    }
    
    .tagline .summit {
      font-style: italic;
      font-weight: 900;
    }
    
    .form-wrapper {
      display: flex;
      flex-direction: column;
      gap: 0.75rem;
    }
    
    input[type="email"] {
      width: 100%;
      padding: 0.625rem 1.25rem;
      border: 1px solid #d1d5db;
      border-radius: 0.5rem;
      font-size: 1.25rem;
      outline: none;
      transition: all 0.2s;
      background: #ffffff;
      color: #111827;
    }
    
    body.dark input[type="email"] {
      background: #111827;
      border-color: #4b5563;
      color: #ffffff;
    }
    
    input[type="email"]:focus {
      border-color: transparent;
      box-shadow: 0 0 0 2px #3b82f6;
    }
    
    input[type="email"]::placeholder {
      color: #9ca3af;
    }
    
    body.dark input[type="email"]::placeholder {
      color: #6b7280;
    }
    
    button {
      width: 100%;
      padding: 0.625rem 1.25rem;
      background: #3b82f6;
      color: white;
      font-weight: 500;
      border: none;
      border-radius: 0.5rem;
      font-size: 1.25rem;
      cursor: pointer;
      transition: background-color 0.2s;
    }
    
    button:hover {
      background: #2563eb;
    }
    
    .footer {
      position: fixed;
      bottom: 1rem;
      left: 50%;
      transform: translateX(-50%);
      font-size: 0.75rem;
      color: #6b7280;
      text-align: center;
      max-width: 90%;
    }
    
    body.dark .footer {
      color: #9ca3af;
    }
  </style>
  <script>
    // Apply the theme from localStorage or system preference
    (function() {
      const storedTheme = localStorage.getItem('theme');
      
      if (storedTheme === 'dark' || 
          (!storedTheme && window.matchMedia('(prefers-color-scheme: dark)').matches)) {
        document.documentElement.classList.add('dark');
        document.body?.classList.add('dark');
      }
    })();
  </script>
</head>
<body>
  <script>
    // Apply dark class to body after it's available
    if (localStorage.getItem('theme') === 'dark' || 
        (!localStorage.getItem('theme') && window.matchMedia('(prefers-color-scheme: dark)').matches)) {
      document.body.classList.add('dark');
    }
  </script>
  
  <div class="container">
    <div class="logo-section">
      <div class="logo-wrapper">
        <img src={logoSvg.src} alt="CTO4.AI" class="dark:hidden" />
        <img src={logoSvg.src} alt="CTO4.AI" class="hidden dark:block" />
      </div>
      <p class="tagline">Transcend local maxima. <span class="summit">Summit.</span></p>
    </div>
    
    <form action="#" method="POST" class="form-wrapper">
      <input
        type="email"
        name="email"
        placeholder="Type your email..."
        required
      />
      <button type="submit">
        Subscribe
      </button>
    </form>
  </div>
  
  <div class="footer">
    Lorem ipsum dolor sit amet, consectetur<br>
    adipiscing elit, sed do eiusmod tempor<br>
    incididunt ut labore et dolore magna
  </div>
</body>
</html>