---
import Layout from '~/layouts/PageLayout.astro';
import NewsletterModal from '~/components/widgets/NewsletterModal.astro';
import { fetchPosts } from '~/utils/blog';
import { getPermalink } from '~/utils/permalinks';
import { getFormattedDate } from '~/utils/utils';

// Helper function to resolve image paths
function resolveImagePath(imagePath: string | undefined): string | undefined {
  if (!imagePath) return undefined;
  
  // If it starts with ~/assets, convert to proper import path
  if (imagePath.startsWith('~/assets/images/')) {
    // Convert ~/assets/images/blog/post/image.png to /src/assets/images/blog/post/image.png
    const cleanPath = imagePath.replace('~/assets/', '/src/assets/');
    return cleanPath;
  }
  
  // Return as-is for other paths (external URLs, etc.)
  return imagePath;
}

export const prerender = true;

const posts = await fetchPosts();
const featuredPost = posts[0]; // Latest post as featured
const otherPosts = posts.slice(1, 7); // Next 6 posts

const metadata = {
  title: 'CTO4.AI - AI-Focused Insights for Technology Leaders',
  description: 'AI-focused insights and practical guidance for CTOs and technology leaders navigating the AI transformation.',
  ignoreTitleTemplate: true,
};
---

<Layout metadata={metadata}>
  <!-- Newsletter Modal -->
  <NewsletterModal />

  <!-- Main Content -->
  <main class="px-6 sm:px-6 py-8 sm:py-12 mx-auto max-w-6xl">
    
    <!-- Featured Article -->
    {featuredPost && (
      <section class="mb-12">
        <article class="bg-white dark:bg-gray-800 rounded-lg shadow-lg overflow-hidden">
          {resolveImagePath(featuredPost.image) && (
            <div class="aspect-video">
              <img 
                src={resolveImagePath(featuredPost.image)} 
                alt={featuredPost.title}
                class="w-full h-full object-cover"
              />
            </div>
          )}
          <div class="p-8">
            <div class="flex items-center text-sm text-gray-500 dark:text-gray-400 mb-4">
              <time datetime={featuredPost.publishDate && getFormattedDate(featuredPost.publishDate)}>
                {featuredPost.publishDate && getFormattedDate(featuredPost.publishDate)}
              </time>
              <span class="mx-2">•</span>
              <span>{featuredPost.author || 'Jack Ivers'}</span>
            </div>
            <h1 class="text-3xl sm:text-4xl font-bold text-gray-900 dark:text-white mb-4">
              <a href={getPermalink(featuredPost.permalink)} class="hover:text-blue-600 dark:hover:text-blue-400 transition-colors">
                {featuredPost.title}
              </a>
            </h1>
            {featuredPost.excerpt && (
              <p class="text-lg text-gray-600 dark:text-gray-300 mb-6 leading-relaxed">
                {featuredPost.excerpt}
              </p>
            )}
            <a 
              href={getPermalink(featuredPost.permalink)} 
              class="inline-flex items-center text-blue-600 dark:text-blue-400 font-medium hover:text-blue-700 dark:hover:text-blue-300 transition-colors"
            >
              Read more →
            </a>
          </div>
        </article>
      </section>
    )}

    <!-- Latest Posts List -->
    <section>
      <div class="flex items-center justify-between mb-8">
        <h2 class="text-2xl font-bold text-gray-900 dark:text-white">Latest</h2>
        <a 
          href="/archive" 
          class="text-blue-600 dark:text-blue-400 hover:text-blue-700 dark:hover:text-blue-300 font-medium transition-colors"
        >
          View all posts →
        </a>
      </div>
      
      <div class="space-y-6">
        {otherPosts.map((post) => (
          <article class="border-b border-gray-200 dark:border-gray-700 pb-6 last:border-b-0 last:pb-0">
            <div class="flex items-start gap-6">
              {resolveImagePath(post.image) && (
                <div class="flex-shrink-0 w-24 h-24 sm:w-32 sm:h-32">
                  <img 
                    src={resolveImagePath(post.image)} 
                    alt={post.title}
                    class="w-full h-full object-cover rounded-lg"
                  />
                </div>
              )}
              <div class="flex-1 min-w-0">
                <div class="flex items-center text-sm text-gray-500 dark:text-gray-400 mb-2">
                  <time datetime={post.publishDate && getFormattedDate(post.publishDate)}>
                    {post.publishDate && getFormattedDate(post.publishDate)}
                  </time>
                  <span class="mx-2">•</span>
                  <span>{post.author || 'Jack Ivers'}</span>
                </div>
                <h3 class="text-xl font-bold text-gray-900 dark:text-white mb-2">
                  <a href={getPermalink(post.permalink)} class="hover:text-blue-600 dark:hover:text-blue-400 transition-colors">
                    {post.title}
                  </a>
                </h3>
                {post.excerpt && (
                  <p class="text-gray-600 dark:text-gray-300 text-sm line-clamp-2">
                    {post.excerpt}
                  </p>
                )}
              </div>
            </div>
          </article>
        ))}
      </div>

      <!-- Load More -->
      <div class="text-center mt-12">
        <a 
          href="/archive" 
          class="inline-flex items-center px-6 py-3 bg-blue-600 hover:bg-blue-700 text-white font-medium rounded-lg transition-colors"
        >
          View All Posts
        </a>
      </div>
    </section>

  </main>
</Layout>

<style>
  .line-clamp-2 {
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
</style>