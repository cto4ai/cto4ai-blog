---
import Layout from '~/layouts/PageLayout.astro';
import Hero from '~/components/widgets/Hero.astro';
import BlogLatestPosts from '~/components/widgets/BlogLatestPosts.astro';
import CallToAction from '~/components/widgets/CallToAction.astro';
import Features from '~/components/widgets/Features.astro';

const metadata = {
  title: 'CTO4.AI - AI-Focused Insights for Technology Leaders',
  description: 'Get AI insights and technology leadership guidance through our newsletter and blog. Practical guidance for CTOs navigating the AI transformation.',
  ignoreTitleTemplate: true,
};
---

<Layout metadata={metadata}>
  <!-- Newsletter Hero Widget ******************* -->

  <Hero
    actions={[
      {
        variant: 'primary',
        text: 'Subscribe to Newsletter',
        href: '/subscribe',
        icon: 'tabler:mail',
      },
      { 
        text: 'Browse Archive', 
        href: '/archive',
        variant: 'secondary'
      },
    ]}
    image={{ 
      src: 'https://images.unsplash.com/photo-1519389950473-47ba0277781c?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=1740&q=80', 
      alt: 'AI Technology Leadership' 
    }}
  >
    <Fragment slot="title">
      <span class="text-accent dark:text-white">AI-Focused Insights</span> for Technology Leaders
    </Fragment>

    <Fragment slot="subtitle">
      <span class="hidden sm:inline">
        Get practical guidance on AI strategy, team leadership, and technology decisions delivered to your inbox.
      </span>
      <span class="block mb-1 sm:hidden font-bold text-blue-600">AI insights for CTOs.</span>
      Join technology leaders navigating the AI transformation with actionable insights, real-world case studies, and strategic guidance.
    </Fragment>
  </Hero>

  <!-- Newsletter Signup Section ******************* -->
  
  <div class="bg-blue-50 dark:bg-gray-800 py-16">
    <div class="mx-auto max-w-4xl px-6 sm:px-6">
      <div class="text-center">
        <h2 class="text-3xl font-bold tracking-tight text-gray-900 dark:text-white sm:text-4xl">
          Stay Ahead of the AI Curve
        </h2>
        <p class="mx-auto mt-4 max-w-2xl text-lg text-gray-600 dark:text-gray-300">
          Weekly insights on AI adoption, engineering leadership, and technology strategy. No spam, just actionable content for CTOs and tech leaders.
        </p>
        <div class="mt-8 flex justify-center">
          <div class="flex w-full max-w-md">
            <input
              type="email"
              placeholder="Enter your email"
              class="min-w-0 flex-auto rounded-l-md border-0 bg-white px-3.5 py-2 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-blue-600 sm:text-sm sm:leading-6 dark:bg-gray-700 dark:text-white dark:ring-gray-600 dark:placeholder:text-gray-400"
            />
            <button
              type="button"
              class="flex-none rounded-r-md bg-blue-600 px-3.5 py-2.5 text-sm font-semibold text-white shadow-sm hover:bg-blue-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-blue-600"
            >
              Subscribe
            </button>
          </div>
        </div>
        <p class="mt-4 text-sm text-gray-500 dark:text-gray-400">
          Join 1,000+ technology leaders â€¢ Unsubscribe anytime
        </p>
      </div>
    </div>
  </div>

  <!-- Features Widget *************** -->

  <Features
    id="topics"
    tagline="What You'll Get"
    title="AI Leadership Insights That Matter"
    subtitle="Practical guidance and real-world insights to help you navigate AI adoption and lead technology teams effectively."
    items={[
      {
        title: 'AI Strategy & Implementation',
        description:
          'Practical frameworks for evaluating AI opportunities, building AI roadmaps, and avoiding common pitfalls in AI adoption.',
        icon: 'tabler:brain',
      },
      {
        title: 'Engineering Team Leadership',
        description:
          'Proven strategies for building, scaling, and leading high-performing engineering teams in the AI era.',
        icon: 'tabler:users',
      },
      {
        title: 'Technology Architecture',
        description:
          'Modern architecture patterns, cloud strategies, and infrastructure decisions that enable AI and scale.',
        icon: 'tabler:building',
      },
      {
        title: 'CTO Insights',
        description:
          'Real experiences from the field: lessons learned, wins, failures, and honest perspectives on technology leadership.',
        icon: 'tabler:bulb',
      },
      {
        title: 'Industry Analysis',
        description:
          'Cutting through the AI hype with practical analysis of tools, trends, and technologies that actually matter.',
        icon: 'tabler:chart-line',
      },
      {
        title: 'Case Studies',
        description:
          'Detailed breakdowns of real AI implementations, technology decisions, and their business outcomes.',
        icon: 'tabler:file-text',
      },
    ]}
  />

  <!-- Latest Posts Widget ******* -->

  <BlogLatestPosts
    title="Latest Insights"
    information="Recent posts on AI, technology leadership, and engineering management. All posts are also delivered to newsletter subscribers."
    linkText="View All Posts"
    linkUrl="/archive"
  />

  <!-- CTA Widget *********** -->

  <CallToAction
    actions={[
      {
        variant: 'primary',
        text: 'CTO Consulting Services',
        href: '/services',
        icon: 'tabler:rocket',
      },
      {
        variant: 'secondary',
        text: 'Subscribe to Newsletter',
        href: '/subscribe',
        icon: 'tabler:mail',
      },
    ]}
  >
    <Fragment slot="title">
      Ready to Transform Your Technology Strategy?
    </Fragment>

    <Fragment slot="subtitle">
      Get expert CTO guidance through consulting services or stay informed with our newsletter. <br class="hidden md:inline" />
      Both designed to help you lead technology teams successfully.
    </Fragment>
  </CallToAction>
</Layout>
